{
  "name": "discbaboons-monorepo",
  "private": true,
  "description": "DiscBaboons - Disc Golf App Monorepo",
  "scripts": {
    "backend": "cd apps/express-server && npm run dev",
    "mobile": "cd apps/mobile-app && npm start",
    "dev": "concurrently \"npm run backend\" \"npm run mobile\"",
    "verify:backend": "cd apps/express-server && npm run verify",
    "test:backend": "cd apps/express-server && npm test",
    "test:mobile": "cd apps/mobile-app && npm test",
    "lint:backend": "cd apps/express-server && npm run lint",
    "lint:mobile": "cd apps/mobile-app && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=9.0.0"
  }
}