{
  "name": "discbaboons-express",
  "version": "2.0.0",
  "description": "Modern Express app for Kubernetes learning with Prisma ORM",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "test": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --verbose",
    "test:watch": "npm test -- --watch",
    "test:integration": "npm test -- --testPathPattern=integration",
    "test:unit": "npm test -- --testPathPattern=unit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "db:generate": "prisma generate",
    "db:pull": "prisma db pull",
    "db:studio": "prisma studio"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "dotenv": "^16.5.0",
    "express": "^4.19.2",
    "pg": "^8.16.0",
    "prisma": "^6.8.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.5",
    "@jest/globals": "^29.7.0",
    "@types/pg": "^8.15.2",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.test.js"
    ],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/tests/**",
      "!coverage/**",
      "!**/prisma/**"
    ],
    "testTimeout": 10000
  }
}